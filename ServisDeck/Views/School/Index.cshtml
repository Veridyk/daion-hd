@model ServisDeck.Models.School.SchoolMainViewModel

@{
    ViewData["Title"] = "Správa uživatelů";
}


<div class="bg-white p-4 flex justify-between">
    <h1 class="text-2xl font-bold">ServiceDesk - Správa škol</h1>
    <button id="showModal" class="py-2 px-4 text-white bg-blue-700 hover:bg-blue-800">Založit školu</button>
</div>

@if (TempData["message"] != null)
{
    <div class="bg-red-100 border @TempData["messageColor"] px-4 py-3 rounded relative mt-4" role="alert">
        <span class="block sm:inline">@TempData["message"]</span>
    </div>
}

<div class="bg-white p-4 p-4 my-4">
    <h2 class="text-xl font-bold mb-4">Seznam škol</h2>
    <div class="relative overflow-x-auto shadow-md p-4">
        <table id="myTable" class="w-full text-sm text-left text-black bg-white my-2">
            <thead class="text-xs text-black uppercase bg-gray-50 bg-gray-100">
                <tr>
                    <th class="px-2">Název školy</th>
                    <th>Zodpovědná osoba</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var school in Model.Schools)
                {
                    <tr class="bg-white border-b bg-gray-50 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-200">
                        <td>@school.Name</td>
                        <td>@school.ResponsiblePerson</td>
                        <td><a class="text-blue-700" asp-action="Detail" asp-route-id="@school.Id">Detail</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div id="testModal" style="max-width:670px" hidden>
        <h2 class="text-xl font-bold">Vytvořit novou školu</h2>
        <form class="my-4" method="post" asp-controller="School" asp-action="CreateSchool">
            <label asp-for="@Model.School.Name" class="block text-gray-700 text-sm font-bold my-2"></label>
            <input type="text" asp-for="@Model.School.Name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Název školy">
            <span class="text-sm text-red-500 my-2" asp-validation-for="@Model.School.Name"></span>
            <label asp-for="@Model.School.ResponsiblePerson" class="block text-gray-700 text-sm font-bold my-2"></label>
            <input type="text" asp-for="@Model.School.ResponsiblePerson" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Email">
            <span class="text-sm text-red-500 my-2" asp-validation-for="@Model.School.ResponsiblePerson"></span>
            <label asp-for="@Model.School.City" class="block text-gray-700 text-sm font-bold my-2"></label>
            <input type="text" asp-for="@Model.School.City" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Město">
            <span class="text-sm text-red-500 my-2" asp-validation-for="@Model.School.City"></span>

            <label asp-for="@Model.School.Street" class="block text-gray-700 text-sm font-bold my-2"></label>
            <input type="text" asp-for="@Model.School.Street" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Ulice">
            <span class="text-sm text-red-500 my-2" asp-validation-for="@Model.School.Street"></span>

            <label asp-for="@Model.School.StreetNumber" class="block text-gray-700 text-sm font-bold my-2"></label>
            <input type="text" asp-for="@Model.School.StreetNumber" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Číslo popisné">
            <span class="text-sm text-red-500 my-2" asp-validation-for="@Model.School.StreetNumber"></span>

            <label asp-for="@Model.School.PostalCode" class="block text-gray-700 text-sm font-bold my-2"></label>
            <input type="text" asp-for="@Model.School.PostalCode" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="PSČ">
            <span class="text-sm text-red-500 my-2" asp-validation-for="@Model.School.PostalCode"></span>

            <label asp-for="@Model.School.ICO" class="block text-gray-700 text-sm font-bold my-2"></label>
            <input type="text" asp-for="@Model.School.ICO" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="IČO">
            <span class="text-sm text-red-500 my-2" asp-validation-for="@Model.School.ICO"></span>

            <label asp-for="@Model.School.DIC" class="block text-gray-700 text-sm font-bold my-2"></label>
            <input type="text" asp-for="@Model.School.DIC" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="DIČ">
            <span class="text-sm text-red-500 my-2" asp-validation-for="@Model.School.DIC"></span>

            <label asp-for="@Model.School.Phone" class="block text-gray-700 text-sm font-bold my-2"></label>
            <input type="text" asp-for="@Model.School.Phone" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Telefon">
            <span class="text-sm text-red-500 my-2" asp-validation-for="@Model.School.Phone"></span>

            <label asp-for="@Model.School.Mail" class="block text-gray-700 text-sm font-bold my-2"></label>
            <input type="text" asp-for="@Model.School.Mail" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Email">
            <span class="text-sm text-red-500 my-2" asp-validation-for="@Model.School.Mail"></span>

            <label asp-for="@Model.School.Web" class="block text-gray-700 text-sm font-bold my-2"></label>
            <input type="text" asp-for="@Model.School.Web" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Webová stránka">
            <span class="text-sm text-red-500 my-2" asp-validation-for="@Model.School.Web"></span>

            <input id="submitRequest" type="submit" value="Vytvořit školu" class="py-2 px-4 mt-4 text-white bg-blue-700 hover:bg-blue-800 cursor-pointer" />
        </form>
    </div>
</div>

@section scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "lengthMenu": " _MENU_ ",
                    "zeroRecords": "Nebyly nalezeny žádné záznamy.",
                    "info": "Strana _PAGE_ z _PAGES_",
                    "infoEmpty": "Záznamy nejsou k dispozici.",
                    "search": "Vyhledat:  ",
                    "paginate": {
                        "first": "První",
                        "last": "Poslední",
                        "next": "Další",
                        "previous": "Předchozí"
                    },
                }
            }
            );

            $("#showModal").click((e) => {
                $("#testModal").modal({
                    clickClose: false
                });
            })
        });


    </script>
}

